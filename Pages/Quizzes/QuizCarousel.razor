<div class="container text-center my-3">
    <div class="row mx-auto my-auto">
        <div id="quiz-carousel" class="carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item py-5 active">
                    <div class="row">
                        @foreach (var qc in Quizzes)
                        {
                            <CarouselItem Card="qc" User="User"></CarouselItem>
                        }
                    </div>
                </div>
            </div>
            <!-- Left and right controls -->
            <a id="quiz-carousel-prev" class="carousel-control-prev" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a id="quiz-carousel-next" class="carousel-control-next" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
       
</div>
